{
  "name": "stelace-server",
  "version": "1.0.0-beta.0",
  "description": "API server for Platforms built to last",
  "private": true,
  "main": "index.js",
  "author": "Stelace (https://stelace.com)",
  "homepage": "https://github.com/stelace/stelace",
  "license": "GPL-3.0",
  "keywords": [
    "API",
    "server",
    "nodejs",
    "platform",
    "marketplace",
    "stelace",
    "backend",
    "search",
    "automation",
    "serverless"
  ],
  "scripts": {
    "start": "node start.js",
    "dev": "ROARR_LOG=true npm run start",
    "pretest": "NODE_ENV=test node test/pretest.js",
    "plugins:pretest": "node scripts/prepareInstalledPluginsTests.js",
    "plugins:install": "node scripts/installExternalPlugins.js",
    "test": "NODE_ENV=test ava --c $(node -p 'Math.max(os.cpus().length - 1, 1)')",
    "test:server": "cp -n .env.example .env && yarn && NODE_ENV=test ava --c $(node -p 'Math.max(os.cpus().length - 1, 1)')",
    "test:noconcurrency": "NODE_ENV=test ava --c 1",
    "test:ci:integration": "npm run pretest && NODE_ENV=test TESTS=integration ava --c 1 --tap | tap-xunit",
    "test:ci:unit": "NODE_ENV=test TESTS=unit ava --c 1 --tap | tap-xunit",
    "test:ci:server": "cp -n .env.example .env && yarn && NODE_ENV=test ava --c 1 --tap | tap-xunit",
    "seed": "INSTANT_DATA=true npm test scripts/instantData.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "knex": "knex",
    "docker:db": "docker-compose up -d postgresql redis elasticsearch",
    "docker:db:reset": "docker-compose down && docker volume prune -f",
    "docker:apm": "COMPOSE_PROJECT_NAME=stelace_monitoring docker-compose -f docker-compose.monitoring.yml"
  },
  "dependencies": {
    "@hapi/joi": "git://github.com/hapijs/joi.git#v16.0.0-rc1",
    "@panva/jose": "^1.6.1",
    "aws-param-store": "^2.0.0",
    "aws-sdk": "^2.255.1",
    "bcrypt": "^3.0.6",
    "bluebird": "^3.5.1",
    "cheerio": "^1.0.0-rc.2",
    "cote": "0.20.1",
    "cron": "^1.6.0",
    "cron-converter": "^0.0.12",
    "debug": "~4.1.0",
    "dotenv": "^5.0.1",
    "elastic-apm-node": "~2.17.2",
    "elasticsearch": "^15.0.0",
    "glob": "^7.1.2",
    "handlebars": "^4.0.12",
    "http-errors": "^1.6.3",
    "intl": "^1.2.5",
    "intl-messageformat": "^2.2.0",
    "jsonwebtoken": "^8.2.1",
    "knex": "^0.14.6",
    "lodash": "4.17.15",
    "mobitel-iso-4217-currencies": "^1.1.1",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.21",
    "ms": "^2.1.1",
    "nodemailer": "^6.3.0",
    "objection": "https://github.com/stelace/objection.js.git#stelace",
    "objection-db-errors": "^1.0.0",
    "openid-client": "3.3.0",
    "parse-github-url": "^1.0.2",
    "path-to-regexp": "^2.4.0",
    "pegjs": "0.10.0",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "redlock": "^3.1.2",
    "restify": "^7.2.0",
    "restify-cors-middleware": "^1.1.1",
    "restify-errors": "^6.0.0",
    "roarr": "^2.3.1",
    "serialize-error": "^2.1.0",
    "sinon": "^7.3.2",
    "socket.io": "^2.2.0",
    "socket.io-redis": "^5.2.0",
    "stelace-util-keys": "https://github.com/stelace/stelace-util-keys.git#3.0.1",
    "stripe": "^6.12.1",
    "superagent": "~5.0.2",
    "useragent": "^2.3.0",
    "uuid": "^3.2.1",
    "virgen-acl": "^0.0.22",
    "vm2": "^3.6.3"
  },
  "devDependencies": {
    "ava": "~2.4.0",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "husky": ">=1",
    "lint-staged": ">=9.4.1",
    "lru-cache": "^5.1.1",
    "oidc-provider": "^6.12.5",
    "puppeteer-core": "^1.20.0",
    "semver": "^6.3.0",
    "socket.io-client": "^2.3.0",
    "sql-fixtures": "^1.0.0",
    "supertest": "^4.0.2",
    "tap-xunit": "^2.4.1"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
